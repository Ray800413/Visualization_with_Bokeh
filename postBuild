#!/bin/bash
set -ex # Exit immediately if a command exists with a non-zero status and then print coomands and ther arguments

fileid="1fc1AbOeIfazqwBxZR7dPxJg-yxQ0osm0" # The fileid generated by google drive
filename="data.zip" # The file name you want to be stored as
curl -c ./cookie -s -L "https://drive.google.com/uc?export=download&id=${fileid}" > /dev/null
curl -Lb ./cookie "https://drive.google.com/uc?export=download&confirm=`awk '/download/ {print $NF}' ./cookie`&id=${fileid}" -o ${filename}
unzip ./${filename} -d ./data && rm ./${filename} ./cookie